<NavBar_ActionBar@ActionBar>:
    id:av
    ActionView:
        # use_separator: True
        HiddenIcon_ActionPrevious:
            id: hd
        ActionGroup:
            id: sp
            mode: 'spinner'
            text: 'NAV'
            ActionButton:
                text: 'Home'
                on_release: app.root.current = 'PFP_HOME'; app.current_title = "FINANCE HOME"
            ActionButton:
                text: 'Dates > Hours'
                on_release: app.root.current = 'D2HA'; app.current_title = "DATES TO HOURS (D2H) APP" # av.ids.sla.text = '-- D2H --'  
            ActionButton:
                text: 'M/I Costs'
                on_release:  app.root.current = 'MICinst'; app.current_title = "Material/Infrastructure Costs"
            ActionButton:
                text: 'Team Input'
                on_release:  app.root.current = 'LABORin'; app.current_title = "L/P/T Input"
            ActionButton:
                text: 'Team Lookup'
                on_release:  app.root.current = 'LPIR'; app.current_title = "Labor Lookup"
            ActionButton:
                text: 'Travel'
                on_release:  app.root.current = 'TVLinst';app.current_title = "TRAVEL"
            ActionButton:
                text: 'Calculator'
                on_release:  app.root.current = 'COinst';app.current_title = "Cost Calculator"
            ActionButton:
                text: 'FinalOutput'
                on_release:  app.root.current = 'CWFin';app.current_title = "Output Details"
            ActionButton:
                text: 'Estimate'
                on_release:  app.root.current = 'ESin';app.current_title = "Estimate Future Costs"
            ActionButton:
                text: 'Credits'
                on_release:  app.root.current = 'CRR';app.current_title = "CREDITS"
        ActionGroup:
            id: set
            mode: 'spinner'
            text: 'SETTINGS'
            ActionButton:
                text: 'App Settings'
                on_press: app.open_settings()
            ActionButton:
                text: 'TBD'
        ActionLabel:
            bold: True 
            id: sla
            text: app.current_title
            color: 0, .6, .6, .7
            # canvas.before:
            #     # Color:
            #     #     rgba: .4,0,0,.2
            #     Rectangle: 
            #         pos: self.pos
            #         size: self.size
        ActionLabel:
            id: sep
            # width: av.width - av.ids.hd.width - av.ids.ex.width - av.ids.set.width - av.ids.sp.width- (len(app.current_title)*20)
            color: 1,1,1,1
        ActionButton:
            id: ex
            text: 'EXIT'
            on_press: app.get_running_app().stop()     
<HiddenIcon_ActionPrevious@ActionPrevious>:
    # title: 'wow'   # app.title if app.title is not None else 'Action Previous'
    # title: ('' if not app.current_title else ' - {}'.format(app.current_title))
    # title: 'HOME' if not (app.current_title) else app.current_title # ('' if not app.current_title else ' - {}'.format(app.current_title))
    with_previous: False
    # color: 0,.6,.6,.5
    app_icon: ''
    app_icon_width: 0
    app_icon_height: 0
    size_hint_x: None
    width: len(self.title)*10